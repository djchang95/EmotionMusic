<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmtionM.EmotionCapture"
             Title="EmotionM">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical" Padding="15">
                <Image x:Name="Image1" HeightRequest="240" />
                <StackLayout Orientation="Horizontal" Padding="15" Spacing="30" HorizontalOptions="Center">
                    <Label x:Name="Emotion" Text="Your Current Emotion:"/>
                </StackLayout>
                <Button x:Name="UploadPict" Clicked="UploadPictureButton_Clicked" Text="Upload Picture" HorizontalOptions="Center" BackgroundColor="SlateGray" TextColor="White" WidthRequest="300"/>
                <Button x:Name="TakePict" Clicked="TakePictureButton_Clicked" Text="Take Picture" HorizontalOptions="Center" BackgroundColor="SlateGray" TextColor="White" WidthRequest="300"/>
                <Button x:Name="YoutubeCarrier" Clicked="YoutubeCarrier_Clicked" Text="Play Youtube" HorizontalOptions="Center" BackgroundColor="SlateGray" TextColor="White" WidthRequest="300" Opacity="0"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>